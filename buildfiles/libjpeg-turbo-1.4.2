# vim: set ft=sh:
pkgname=libjpeg-turbo
pkgver=1.4.2
pkgurl=https://downloads.sourceforge.net/project/libjpeg-turbo/${pkgver}/libjpeg-turbo-${pkgver}.tar.gz

module load pkg-config
module load nasm
confopts="--with-jpeg8"

pkgmodule=$(cat <<-EOT
#%Module
set LIBJPEG_DIR $REPO/opt/$pkgname-$pkgver
setenv LIBJPEG_DIR \$LIBJPEG_DIR
EOT)
