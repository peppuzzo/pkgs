# vim: set ft=sh:
pkgname=slepc
pkgver=3.6.2
slepc4pyver=3.6.0
pkgurl=http://www.grycap.upv.es/slepc/download/distrib/slepc-$pkgver.tar.gz

unset SLEPC_DIR
module load openmpi arpack-ng petsc

configure()
{
  pushd $tmpdir/$srcdir
  ./configure \
    --prefix=$destdir \
    --download-blopex \
    --with-arpack=1 \
    --with-arpack-dir=$ARPACK_DIR/lib
}

build()
{
  pushd $tmpdir/$srcdir
  make SLEPC_DIR=$PWD
  popd
}

package()
{
  pushd $tmpdir/$srcdir
  # install new one
  make SLEPC_DIR=$tmpdir/$srcdir install
  popd
}

post_package()
{
  # petsc4py
  pushd $tmpdir
  curl -O -L https://bitbucket.org/slepc/slepc4py/downloads/slepc4py-${slepc4pyver}.tar.gz
  tar xvfz slepc4py-${slepc4pyver}.tar.gz
  pushd slepc4py-${slepc4pyver}
  export SLEPC_DIR=$destdir
  python setup.py install --prefix=$destdir
  popd
  popd
}

pkgmodule=$(cat <<-EOT
#%Module
module load petsc
set SLEPC_DIR $REPO/opt/slepc-$pkgver
setenv SLEPC_DIR \$SLEPC_DIR

prepend-path PATH \$SLEPC_DIR/bin
prepend-path PKG_CONFIG_PATH \$SLEPC_DIR/lib/pkgconfig
prepend-path PYTHONPATH \$SLEPC_DIR/lib/python2.7/site-packages
EOT)
