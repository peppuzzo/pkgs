# vim: set ft=sh:
pkgname=libffi
pkgver=3.0.13
pkgurl=https://mirrorservice.org/sites/sources.redhat.com/pub/libffi/libffi-${pkgver}.tar.gz

pkgmodule=$(cat <<-EOT
#%Module
module load gmp
set LIBFFI_DIR $REPO/opt/libffi-$pkgver
setenv LIBFFI_DIR \$LIBFFI_DIR

prepend-path PKG_CONFIG_PATH \$LIBFFI_DIR/lib/pkgconfig
prepend-path MANPATH \$LIBFFI_DIR/share/man
EOT)
