# vim: set ft=sh:
pkgname=petsc
pkgver=3.6.2
pkgurl=http://ftp.mcs.anl.gov/pub/petsc/release-snapshots/petsc-lite-${pkgver}.tar.gz

unset PETSC_DIR
unset PETSC_ARCH
module load openmpi
module load suitesparse
module load metis
module load parmetis
module load hwloc
module load scotch
module load hdf5
module load superlu
module load superlu_dist
module load scalapack

configure()
{
  pushd $tmpdir/$srcdir
  ./configure \
    --prefix=$destdir \
    --with-debugging=no \
    --with-shared-libraries=yes \
    --with-suitesparse=1 \
    --with-suitesparse-dir=$SUITESPARSE_DIR \
    --with-hwloc=1 \
    --with-hwloc-dir=$HWLOC_DIR \
    --with-metis=1 \
    --with-metis-dir=$METIS_DIR \
    --with-parmetis=1 \
    --with-parmetis-dir=$PARMETIS_DIR \
    --with-scotch=1 \
    --with-scotch-dir=$SCOTCH_DIR \
    --with-ptscotch=1 \
    --with-ptscotch-dir=$SCOTCH_DIR \
    --with-hdf5=1 \
    --with-hdf5-dir=$HDF5_DIR \
    --with-scalapack=1 \
    --with-scalapack-dir=$SCALAPACK_DIR \
    --with-superlu=1 \
    --with-superlu-lib=$SUPERLU_DIR/lib/libsuperlu.a \
    --with-superlu-include=$SUPERLU_DIR/include \
    --with-superlu_dist=1 \
    --with-superlu_dist-lib=$SUPERLUDIST_DIR/lib/libsuperlu_dist.a \
    --with-superlu_dist-include=$SUPERLUDIST_DIR/include
}

build()
{
  pushd $tmpdir/$srcdir
  make PETSC_DIR=$PWD PETSC_ARCH=arch-darwin-c-opt all
  popd
}

package()
{
  # install new one
  pushd $tmpdir/$srcdir
  make PETSC_DIR=$PWD PETSC_ARCH=arch-darwin-c-opt install
  popd
}

pkgmodule=$(cat <<-EOT
#%Module
module load openmpi
module load suitesparse
module load metis
module load parmetis
module load hwloc
module load scotch
module load hdf5
module load superlu
module load superlu_dist
module load scalapack

set PETSC_DIR $REPO/opt/petsc-$pkgver
setenv PETSC_DIR \$PETSC_DIR

prepend-path PATH \$PETSC_DIR/bin
prepend-path PKG_CONFIG_PATH \$PETSC_DIR/lib/pkgconfig
EOT)
