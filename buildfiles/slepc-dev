# vim: set ft=sh:
pkgname=slepc
pkgver=dev
pkgurl=git@bitbucket.org:slepc/slepc.git

unset SLEPC_DIR
module load openmpi arpack-ng python cython numpy mpi4py
module load petsc/dev

configure()
{
  pushd $tmpdir/$srcdir
  ./configure \
    --prefix=$destdir \
    --download-blopex \
    --with-arpack=1 \
    --with-arpack-dir=$ARPACK_DIR/lib
}

build()
{
  pushd $tmpdir/$srcdir
  make SLEPC_DIR=$PWD PETSC_DIR=$PETSC_DIR
  popd
}

package()
{
  pushd $tmpdir/$srcdir
  # install new one
  make SLEPC_DIR=$tmpdir/$srcdir PETSC_DIR=$PETSC_DIR install
  popd
}

testing()
{
  pushd $tmpdir/$srcdir
  make SLEPC_DIR=$destdir PETSC_DIR=$PETSC_DIR test
  popd
}

post_package()
{
  # slepc4py
  pushd $tmpdir
  if [[ -d slepc4py ]]; then
    pushd slepc4py
    git pull
    popd
  else
    git clone git@bitbucket.org:slepc/slepc4py.git
  fi
  pushd slepc4py
  export SLEPC_DIR=$destdir
  python setup.py install --prefix=$destdir
  popd
  popd
}

pkgmodule=$(cat <<-EOT
#%Module
module load petsc/dev
set SLEPC_DIR $REPO/opt/slepc-$pkgver
setenv SLEPC_DIR \$SLEPC_DIR

prepend-path PATH \$SLEPC_DIR/bin
prepend-path PKG_CONFIG_PATH \$SLEPC_DIR/lib/pkgconfig
prepend-path PYTHONPATH \$SLEPC_DIR/lib/python2.7/site-packages
EOT)
