# vim: set ft=sh:
pkgname=arpack-ng
pkgver=3.4.0
pkgurl=https://github.com/opencollab/arpack-ng/archive/${pkgver}.tar.gz

module load openmpi
moduledeps+=("openmpi")
export F77=mpif77

apply_patch()
{
  pushd $tmpdir/$srcdir
  ./bootstrap
  popd
}

confopts="--enable-mpi --disable-dependency-tracking"

