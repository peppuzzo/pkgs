# vim: set ft=sh:
pkgname=swig
pkgver=3.0.7
pkgurl=http://downloads.sourceforge.net/${pkgname}/${pkgname}-${pkgver}.tar.gz

module load pkg-config
module load python
module load pcre

confopts="--without-java --without-perl5 --without-php --without-ruby --without-tcl"

pkgmodule=$(cat <<-EOT
#%Module
module load python
set SWIG_DIR $REPO/opt/$pkgname-$pkgver
setenv SWIG_DIR \$SWIG_DIR

prepend-path PATH \$SWIG_DIR/bin
prepend-path MANPATH \$SWIG_DIR/share/man
EOT)
